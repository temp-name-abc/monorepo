{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "env": ["COGNITO_CLIENT_ID", "COGNITO_CLIENT_SECRET", "COGNITO_ISSUER", "COGNITO_DOMAIN", "NEXT_PUBLIC_GA_ID", "NEXT_PUBLIC_FB_ID"],
            "outputs": ["dist/**", ".next/**"]
        },
        "lint": {
            "outputs": []
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "cdk": {
            "dependsOn": ["^cdk"],
            "env": ["GOOGLE_CLIENT_ID", "GOOGLE_CLIENT_SECRET"],
            "outputs": ["cdk.out/**"]
        }
    }
}
